<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jingna.artworkmall.page.YqmActivity">

    <RelativeLayout
        android:background="@color/yqm"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@mipmap/backff"
                android:layout_centerInParent="true"
                android:layout_width="9dp"
                android:layout_height="16dp" />

        </RelativeLayout>

        <TextView
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="@color/white_ffffff"
            android:text="我的邀请码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl"
        android:background="@mipmap/bg_yqm"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_marginTop="180dp"
            android:orientation="vertical"
            android:layout_marginLeft="86dp"
            android:layout_marginRight="86dp"
            android:background="@drawable/bg_ffffff_4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_width="142dp"
                android:layout_height="142dp" />

            <TextView
                android:id="@+id/tv_code"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:textColor="#7E13E5"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginBottom="19dp"
                android:layout_marginTop="1dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#808080"
                android:textSize="11sp"
                android:text="我的邀请码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_save"
            android:background="@drawable/bg_fcb23b_4dp"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:gravity="center"
            android:layout_marginTop="36dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ll"
            android:textColor="@color/white_ffffff"
            android:textSize="13sp"
            android:text="保存图片"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

    </RelativeLayout>

</LinearLayout>
