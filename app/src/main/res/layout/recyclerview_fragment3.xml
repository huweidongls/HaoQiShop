<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <TextView
            android:id="@+id/tv_time"
            android:background="@drawable/bg_dfdfdf_12dp"
            android:gravity="center"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:textSize="12sp"
            android:textColor="@color/white_ffffff"
            android:text="星期二 10:00"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="24dp" />

    </RelativeLayout>

    <LinearLayout
        android:background="@drawable/bg_ffffff_8dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.jingna.artworkmall.widget.RoundImageView
            android:id="@+id/iv"
            app:left_top_radius="8dp"
            app:right_top_radius="8dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/img0063x"
            android:layout_width="match_parent"
            android:layout_height="183dp" />

        <TextView
            android:id="@+id/tv_title"
            android:textColor="#707070"
            android:textSize="17sp"
            android:text="当代中国画名家学术邀请展"
            android:layout_margin="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
