<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jingna.artworkmall.page.LayaControlActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:scaleType="fitXY"
            android:src="@mipmap/index_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <RelativeLayout
                android:id="@+id/rl_back"
                android:layout_width="42dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@mipmap/backff"
                    android:layout_width="10dp"
                    android:layout_height="16dp" />

            </RelativeLayout>

            <TextView
                android:layout_centerInParent="true"
                android:textSize="17sp"
                android:textColor="@color/white_ffffff"
                android:text="蓝牙控制"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="44dp"
            android:src="@mipmap/icon040"
            android:layout_width="88dp"
            android:layout_height="88dp" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="138dp"
            android:textColor="@color/white_ffffff"
            android:textSize="14sp"
            android:text="蓝牙未连接"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <LinearLayout
            android:id="@+id/ll_top"
            android:orientation="vertical"
            android:elevation="4dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/bg_ffffff_3dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <com.jingna.artworkmall.widget.LongClickButton
                android:id="@+id/btn_top"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="39dp"
                android:background="@mipmap/icon036"
                android:layout_width="65dp"
                android:layout_height="65dp" />

            <TextView
                android:layout_marginTop="13dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#777777"
                android:textSize="14sp"
                android:text="点击向上"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_marginRight="15dp"
            android:orientation="vertical"
            android:elevation="4dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/bg_ffffff_3dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <com.jingna.artworkmall.widget.LongClickButton
                android:id="@+id/btn_bottom"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="39dp"
                android:background="@mipmap/icon037"
                android:layout_width="65dp"
                android:layout_height="65dp" />

            <TextView
                android:layout_marginTop="13dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#777777"
                android:textSize="14sp"
                android:text="点击向下"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_start"
        android:background="@drawable/bg_23c1c7_3dp"
        android:textColor="@color/white_ffffff"
        android:textSize="16sp"
        android:text="开始"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <Button
        android:id="@+id/btn_pause"
        android:background="@drawable/bg_23c1c7_3dp"
        android:textColor="@color/white_ffffff"
        android:textSize="16sp"
        android:text="暂停"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <LinearLayout
        android:id="@+id/ll_end"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon038"
            android:layout_width="18dp"
            android:layout_height="19dp" />

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textColor="@color/theme"
            android:textSize="16sp"
            android:text="提前结束订单"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
