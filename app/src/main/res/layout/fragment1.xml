<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!--<com.jingna.artworkmall.widget.StatusBarHeightView-->
        <!--android:orientation="vertical"-->
        <!--app:use_type="use_padding_top"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

        <RelativeLayout
            style="@style/rl_top_bar">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/logo"
                android:layout_width="35dp"
                android:layout_height="25dp" />

            <com.jingna.artworkmall.widget.ScrollTextView1
                android:gravity="center"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_centerInParent="true"
                android:id="@+id/tv_scroll_top"
                android:textColor="@color/white_ffffff"
                android:textSize="17sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_alignParentRight="true"
                android:layout_width="66dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@mipmap/kefu"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

            </RelativeLayout>

        </RelativeLayout>

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp">

                        <ImageView
                            android:scaleType="fitXY"
                            android:src="@mipmap/index_bg"
                            android:layout_width="match_parent"
                            android:layout_height="160dp" />

                        <RelativeLayout
                            android:id="@+id/rl_search"
                            android:background="@drawable/bg_f9f9f9_17dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="35dp">

                            <LinearLayout
                                android:layout_centerInParent="true"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_gravity="center_vertical"
                                    android:src="@mipmap/search"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp" />

                                <TextView
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="8dp"
                                    android:textColor="#ffffff"
                                    android:textSize="12sp"
                                    android:text="请输入搜索关键字"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                        </RelativeLayout>

                        <com.youth.banner.Banner
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/rl_search"
                            android:id="@+id/banner"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="78dp">

                        <RelativeLayout
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/bg_ffffff_5dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_centerInParent="true"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_gravity="center_horizontal"
                                    android:src="@mipmap/index1"
                                    android:layout_width="38dp"
                                    android:layout_height="32dp" />

                                <TextView
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/black_333333"
                                    android:textSize="12sp"
                                    android:text="优质服务"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_marginLeft="11dp"
                            android:background="@drawable/bg_ffffff_5dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_centerInParent="true"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_gravity="center_horizontal"
                                    android:src="@mipmap/index2"
                                    android:layout_width="38dp"
                                    android:layout_height="32dp" />

                                <TextView
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/black_333333"
                                    android:textSize="12sp"
                                    android:text="精选好物"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_marginLeft="11dp"
                            android:background="@drawable/bg_ffffff_5dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_centerInParent="true"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_gravity="center_horizontal"
                                    android:src="@mipmap/index3"
                                    android:layout_width="38dp"
                                    android:layout_height="32dp" />

                                <TextView
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/black_333333"
                                    android:textSize="12sp"
                                    android:text="健康管理"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="11dp"
                            android:background="@drawable/bg_ffffff_5dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_centerInParent="true"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_gravity="center_horizontal"
                                    android:src="@mipmap/index4"
                                    android:layout_width="38dp"
                                    android:layout_height="32dp" />

                                <TextView
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/black_333333"
                                    android:textSize="12sp"
                                    android:text="科学养生"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/ll_gonggao"
                        android:background="@color/white_ffffff"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="9dp"
                            android:src="@mipmap/toutiao"
                            android:layout_width="45dp"
                            android:layout_height="31dp" />

                        <com.jingna.artworkmall.widget.ScrollTextView
                            android:id="@+id/tv_scroll"
                            android:layout_marginLeft="22dp"
                            android:layout_marginRight="42dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/black_333333"
                            android:textSize="14sp"
                            android:text="我的绘画历程"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                        
                        <TextView
                            android:background="@drawable/bg_7fd7da_10dp_bord"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="15dp"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:textColor="@color/theme"
                            android:text="去看看"
                            android:layout_width="45dp"
                            android:layout_height="19dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="70dp">

                        <ImageView
                            android:id="@+id/iv_saomiao"
                            android:scaleType="centerCrop"
                            android:layout_marginLeft="15dp"
                            android:src="@mipmap/index5"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:id="@+id/iv_youxuan"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="11dp"
                            android:src="@mipmap/index6"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                    <android.support.v4.view.ViewPager
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/vp"
                        android:layout_width="match_parent"
                        android:layout_height="122dp"
                        android:clipToPadding="false"
                        android:overScrollMode="never" />

                    <RelativeLayout
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="13dp"
                        android:background="@mipmap/tit"
                        android:layout_width="145dp"
                        android:layout_height="28dp">

                        <TextView
                            android:layout_centerInParent="true"
                            android:textColor="#000000"
                            android:textSize="17sp"
                            android:text="健康优选"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="9dp"
                        android:layout_marginBottom="20dp"
                        android:descendantFocusability="blocksDescendants"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                </LinearLayout>

            </ScrollView>

        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <!--</com.jingna.artworkmall.widget.StatusBarHeightView>-->

</LinearLayout>
