<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_ffffff_8dp"
        android:orientation="vertical"
        android:layout_width="166dp"
        android:layout_height="wrap_content">

        <com.jingna.artworkmall.widget.RoundImageView
            android:id="@+id/iv"
            app:left_top_radius="8dp"
            app:right_top_radius="8dp"
            android:src="@mipmap/aaa"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textColor="@color/black_333333"
            android:textSize="15sp"
            android:text="行者 马良"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="center"
            android:textColor="#B6BDD2"
            android:textSize="11sp"
            android:text="尺寸:直径33cm (0.8平尺)"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/bg_eff2f6_10dp"
            android:layout_width="match_parent"
            android:layout_height="22dp" />

        <RelativeLayout
            android:layout_marginBottom="12dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerVertical="true"
                android:textColor="#A02630"
                android:textSize="15sp"
                android:text="¥1500.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:background="@drawable/bg_a02630_2dp"
                android:textColor="@color/white_ffffff"
                android:textSize="13sp"
                android:text="预约"
                android:layout_width="50dp"
                android:layout_height="21dp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
