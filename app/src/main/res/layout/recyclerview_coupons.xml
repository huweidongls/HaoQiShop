<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="112dp">

        <RelativeLayout
            android:id="@+id/rl"
            android:background="@mipmap/cheng"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_manjian"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/white_ffffff"
                        android:textSize="15sp"
                        android:text="¥"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_manjian"
                        android:textColor="@color/white_ffffff"
                        android:textSize="27sp"
                        android:text="20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_zhekou"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_zhekou"
                        android:textColor="@color/white_ffffff"
                        android:textSize="27sp"
                        android:text="8.8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textColor="@color/white_ffffff"
                        android:textSize="16sp"
                        android:text="折"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_bottom"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white_ffffff"
                    android:textSize="12sp"
                    android:text="满20元立减"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:background="@mipmap/bai"
            android:layout_weight="2.3"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_title"
                android:layout_marginRight="24dp"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="24dp"
                android:textColor="@color/black_333333"
                android:textSize="14sp"
                android:text="限部分商品使用"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_max"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="24dp"
                android:layout_below="@+id/tv_title"
                android:textColor="#767676"
                android:textSize="12sp"
                android:text="最高抵扣100.00积分"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="25dp"
                android:textColor="@color/black_333333"
                android:textSize="10sp"
                android:text="2019.12.19-2020.12.19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
